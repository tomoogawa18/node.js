<h1 class="mb-3">Person一覧</h1>

<div class="container">
    <a class="mb-3" href="/person/new">新しいPersonを作成する。</a>
    <div class="row mt-3">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>email</th>
                    <th>password</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% people.forEach((s) =>{ %>
                <tr>
                    <td><%= s.id %></td>
                    <td><%= s.name  %></td>
                    <td><%= s.email %></td>
                    <td><%= s.password %></td>
                    <td><a href="<%= `/person/${s.id}` %>">詳細</a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>